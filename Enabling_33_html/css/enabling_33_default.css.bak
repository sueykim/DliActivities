.content{
	position:absolute;
	top:180px;
	left:10px;
	margin: 0px; 
	width:320px; 
	height:220px; 
	padding: 10px 10px 10px 5px; 
	overflow:auto; 
	background:#333; 
	border: solid thin #fff;
	-webkit-border-radius:3px; 
	-moz-border-radius:3px; 
	border-radius:3px;
	font-family: 'Didact Gothic',sans-serif;
    letter-spacing: 1px;
	line-height: 20px;
	
	background: #ffffff; /* Old browsers */
	
	
	-moz-box-shadow:inset 0px 1px 4px 2px rgba(119, 119, 119, 0.2);
	-webkit-box-shadow:  inset 0px 1px 4px 2px rgba(119, 119, 119, 0.2);
    box-shadow:  inset 0px 1px 4px 2px rgba(119, 119, 119, 0.2);
}
.content p:nth-child(even){color:#999; font-size:14px; font-style:italic;}
.content p:nth-child(3n+0){color:#c96;}
